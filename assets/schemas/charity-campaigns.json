{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fundraising Campaigns Schema",
  "type": "object",
  "properties": {
    "campaigns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "shortDescription": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "targetAmount": {
            "type": "number"
          },
          "currentAmount": {
            "type": "number"
          },
          "beneficiaries": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "completed",
              "inactive"
            ]
          },
          "imageUrl": {
            "type": "string",
            "format": "uri"
          },
          "location": {
            "type": "string"
          },
          "activities": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "highlights": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "id",
          "title",
          "description",
          "shortDescription",
          "startDate",
          "endDate",
          "targetAmount",
          "currentAmount",
          "beneficiaries",
          "status",
          "imageUrl",
          "location",
          "activities",
          "highlights"
        ]
      }
    }
  },
  "required": [
    "campaigns"
  ]
}